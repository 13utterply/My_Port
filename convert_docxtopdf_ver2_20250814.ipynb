def fix_text(text):
    for wrong, correct in custom_replacements.items():
        text = text.replace(wrong, correct)
    text = (text.replace("ÓÉâ", "‡πà")
                .replace("ÓÉÑ", "‡πâ")
                .replace("ÓÉÖ", "‡πä"))
    return normalize_text(text)

def insert_filename_heading(doc, foldername, filename):
    from docx.enum.text import WD_ALIGN_PARAGRAPH
    heading_text = f"‡∏ä‡∏∑‡πà‡∏≠‡πÇ‡∏ü‡∏•‡πÄ‡∏î‡∏≠‡∏£‡πå: {foldername} ‡∏ä‡∏∑‡πà‡∏≠‡πÑ‡∏ü‡∏•‡πå: {filename}"

    # ‡πÉ‡∏ä‡πâ‡∏û‡∏≤‡∏£‡∏≤‡∏Å‡∏£‡∏≤‡∏ü‡πÅ‡∏£‡∏Å‡πÄ‡∏õ‡πá‡∏ô anchor
    anchor_para = doc.paragraphs[0] if doc.paragraphs else doc.add_paragraph()

    # ‡πÅ‡∏ó‡∏£‡∏Å heading ‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô
    heading_para = anchor_para.insert_paragraph_before(heading_text)
    heading_para.alignment = WD_ALIGN_PARAGRAPH.LEFT

    # ‡πÄ‡∏û‡∏¥‡πà‡∏° 2 ‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î‡∏ß‡πà‡∏≤‡∏á
    doc.add_paragraph("")
    doc.add_paragraph("")

def process_docx(path):
    doc = Document(path)
    foldername = os.path.basename(os.path.dirname(path))
    filename = os.path.splitext(os.path.basename(path))[0]
    #‡πÅ‡∏ó‡∏£‡∏Å heading
    insert_filename_heading(doc, foldername, filename)

    # ‡πÅ‡∏Å‡πâ paragraph ‡∏ï‡∏±‡πâ‡∏á‡πÅ‡∏ï‡πà index 3 ‡πÄ‡∏õ‡πá‡∏ô‡∏ï‡πâ‡∏ô‡πÑ‡∏õ (‡∏Ç‡πâ‡∏≤‡∏° heading + blank 2 ‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î)
    for para in doc.paragraphs:
        #if i >= 3:
        for run in para.runs:
            run.text = fix_text(run.text)


    for table in doc.tables:
        for row in table.rows:
            for cell in row.cells:
                for p in cell.paragraphs:
                    for run in p.runs:
                        run.text = fix_text(run.text)

    doc.save(path)


